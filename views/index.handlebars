<div id="content-wrap">
<div class="nav-bar">
    <div class="row-12">
        <h1 class="text-center navBar"><i class="fas fa-sms mr-3"></i>Bored Texter App</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form id="messageForm">
                        <div class="form-group">
                            <label for="Your Name">Your Name</label>
                            <input type="input" class="form-control" id="name" />
                        </div>
                        <div class="form-group">
                            <div class="mt-3">
                                <label>Message Area</label>
                                <textarea id="messagebox" rows="1" cols="100" class="w-100 form-control"
                                    style="resize: none"></textarea>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary d-block"><i
                                class="fas fa-paper-plane mr-3"></i>Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-12 mt-3 pb-5">
            <div class="card">
                <div class="card-body">
                    {{#each messages}}
                    <h4><i class="fas fa-user mr-3"></i>{{name}}</h4>
                    <hr>
                    <p >" {{message}} " <button data-id="{{id}}" id="delete" class="bg-danger text-white ml-3"><i class="fas fa-trash"></i></button></p>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
</div>

